#products-index.content-wrapper
  .content
    .hero
      h1 products
    .content-container
      .menu
        #all-button.item.active data-target=".products-container" ALL
        #flower-button.item data-target="#flower" FLOWER
        #vape-button.item data-target="#vape" VAPE
      #flower.products-container
        - @flowers.each do | flower |
          .column
            = link_to product_path(flower), class: "prod-card" do
              .image-container
                .overlay
                = image_tag(hw_product_image_url("#{flower.name}.jpg"))
              .info-container
                .name #{flower.name} (#{flower.weed_type.capitalize})
                .benefits #{flower.benefits.humanize}
              
      #vape.products-container
        - @vapes.each do | vape |
          .column
            = link_to product_path(vape), class: "prod-card" do
              .image-container
                .overlay
                - if vape.name == "80%"
                  = image_tag(hw_product_image_url("80.jpg"))
                - else
                  = image_tag(hw_product_image_url("#{vape.name}.jpg"))
              .info-container
                .name #{vape.name}
                - if vape.benefits
                  .benefits #{vape.benefits.humanize} 